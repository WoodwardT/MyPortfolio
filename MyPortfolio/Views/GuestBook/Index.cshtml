@model IEnumerable<MyPortfolio.Models.GuestBook>

@{
    ViewData["Title"] = "Index";
    ViewData["Banner"] = "GuestBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-9">
        <h1 class="text-center display-5 mb-3">@ViewData["Banner"]</h1>
        <div class="text-center p-4 text-black bg-light fs-5 lh-base mb-3 text-black-50">
            Fill in the contact form and and the message will be sent to me in an email via Formspree.io.
            Other wise fill in the in the guest book to leave a message publicly.
        </div>
    </div>
</div>
<br />
<br />
<h2 class="section-title"><span>Contact Form</span></h2>


<form action="https://formspree.io/f/mknypgyy"
      method="POST">
    <div id="formspree-form">
        <label>
            Your Name:
            <input type="text" name="Name"></input>
        </label>
        <label>
            Your email:
            <input type="email" name="email">
        </label>
        <label>
            Your message:
            <textarea name="message"></textarea>
        </label>

        <button type="submit" class="btn btn-light text-uppercase text-light" style="background-color:#5E5E5E">Send</button>
    </div>
</form>
<br />
<br />
<br />
<br />
<h2 class="section-title"><span>Guest Book</span></h2>
<br />
<br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Take(5))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


